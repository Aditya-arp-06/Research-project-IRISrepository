def try_find_solution_modp(c, trials, xr, yr):
    for _ in range(trials):
        x = random.randint(-xr, xr)
        y = random.randint(-yr, yr)
        lhs = (pow(y,3,p) + (x*y) % p) % p
        rhs = (pow(x,4,p) + c) % p
        if lhs == rhs:
            return (x,y)
    return None

if __name__ == "__main__":
    trials = 200
    xr = 100
    yr = 100
    samples = 1000
    successes = 0
    total_time = 0.0
    for i in range(samples):
        c = random.randrange(p)
        start = time.time()
        sol = try_find_solution_modp(c, trials, xr, yr)
        elapsed = time.time() - start
        total_time += elapsed
        if sol is not None:
            successes += 1
    print(f"Random-sampling hardness: successes={successes}/{samples}")
    print(f"Average time per sample: {total_time/samples*1000:.2f} ms")
